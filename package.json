{
  "name": "react-express-app",
  "version": "1.0.0",
  "description": "React/Node.js Boilerplate",
  "main": "index.js",
  "author": "Lucas Caltabiano",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf ./public ./build",
    "prestart": "npm run clean",
    "start": "nodemon --exec babel-node src/server/index.js -i src/client",
    "test:watch": "jest --watchAll --config=_config/jest.config.js",
    "test:coverage": "jest --coverage --config=_config/jest.config.js",
    "prebuild": "npm run clean",
    "build:webpack": "webpack -p --env.production --config _config/webpack.config.js",
    "build:node": "babel src/server -d build/app --copy-files",
    "build": "npm run build:webpack && npm run build:node",
    "start:prod": "set NODE_ENV=production && set NODE_PATH=./build && pm2 start build/app/index.js -i max"
  },
  "devDependencies": {
    "@babel/cli": "7.1.2",
    "@babel/core": "7.1.2",
    "@babel/node": "7.0.0",
    "@babel/plugin-proposal-class-properties": "7.1.0",
    "@babel/plugin-proposal-decorators": "7.1.2",
    "@babel/plugin-proposal-object-rest-spread": "7.0.0",
    "@babel/preset-env": "7.1.0",
    "@babel/preset-react": "7.0.0",
    "autoprefixer": "9.1.5",
    "babel-core": "7.0.0-0",
    "babel-eslint": "10.0.1",
    "babel-jest": "23.6.0",
    "babel-loader": "8.0.4",
    "babel-plugin-array-includes": "2.0.3",
    "css-loader": "1.0.0",
    "eslint": "5.6.1",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "3.1.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jest": "21.24.1",
    "eslint-plugin-jsx-a11y": "6.1.2",
    "eslint-plugin-prettier": "3.0.0",
    "eslint-plugin-react": "7.11.1",
    "file-loader": "2.0.0",
    "html-webpack-plugin": "3.2.0",
    "identity-obj-proxy": "3.0.0",
    "postcss-loader": "3.0.0",
    "precss": "3.1.2",
    "prettier": "1.14.3",
    "style-loader": "0.23.0"
  },
  "dependencies": {
    "@decorators/di": "1.0.2",
    "@decorators/express": "2.3.0",
    "autobind-decorator": "2.1.0",
    "body-parser": "1.18.3",
    "compression": "1.7.3",
    "enzyme": "3.7.0",
    "enzyme-adapter-react-16": "1.6.0",
    "enzyme-to-json": "3.3.4",
    "express": "4.16.3",
    "global": "4.3.2",
    "jest": "23.6.0",
    "mobx": "5.5.0",
    "mobx-react": "5.2.8",
    "prop-types": "15.6.2",
    "react": "16.5.2",
    "react-dom": "16.5.2",
    "react-favicon": "0.0.14",
    "react-router-dom": "4.3.1",
    "rimraf": "2.6.2",
    "webpack": "4.20.2",
    "webpack-cli": "3.1.2",
    "webpack-dev-middleware": "3.4.0",
    "webpack-hot-middleware": "2.24.2"
  }
}
